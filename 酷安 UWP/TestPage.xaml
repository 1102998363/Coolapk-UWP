<Page
    x:Class="酷安_UWP.TestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:酷安_UWP"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Grid>
        <Button Style="{ThemeResource NavigationBackButtonNormalStyle}" Margin="48,2,0,0" Click="Button_Click_3" VerticalAlignment="Top"/>
        <ScrollViewer  Margin="0,48,0,0">
            <StackPanel>
                <TextBox Header="uid" x:Name="uid"/>
                <Button Click="Button_Click">go to</Button>
                <TextBox x:Name="txb1"/>
                <controls:MarkdownTextBlock Text="{x:Bind txb1.Text,Mode=OneWay}"/>
                <Button Click="Button_Click_1">get update</Button>
                <Button Click="Button_Click_2">show dialog</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
