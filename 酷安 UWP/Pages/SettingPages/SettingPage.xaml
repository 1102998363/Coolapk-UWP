<Page
    x:Class="CoolapkUWP.Pages.SettingPages.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cu="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractNotPresent(Windows.Foundation.UniversalApiContract,5)"
    xmlns:fcu="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract,5)"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:CoolapkUWP.Data"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ScrollViewer ManipulationDelta="ScrollViewer_ManipulationDelta" ManipulationMode="TranslateY" ViewChanging="ScrollViewer_ViewChanging" Padding="10,0">
            <StackPanel x:Name="stackP" Margin="0,128,0,2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="uidTextBox" Header="输入你的用户名或UID"/>
                    <Button Grid.Column="1" VerticalAlignment="Bottom" Click="Button_Click" Tag="fakeLogin">保存</Button>
                </Grid>
                <TextBlock TextWrapping="Wrap">“假装登录”后你可以从侧边栏快速进入个人动态（没有其他用处）。</TextBlock>
                <TextBlock Margin="0,0,0,10" TextWrapping="Wrap">若不需要该功能，请保持输入框空白。</TextBlock>
                <ToggleSwitch x:Name="IsUseOldEmojiMode" Header="使用旧式表情" Toggled="ToggleSwitch_Toggled"/>
                <ToggleSwitch x:Name="IsBackgroundColorFollowSystem" Header="背景色跟随系统" Toggled="ToggleSwitch_Toggled"/>
                <ToggleSwitch x:Name="IsDarkMode" Header="背景色" Toggled="ToggleSwitch_Toggled"
                              OnContent="黑色" OffContent="白色"/>
                <ToggleSwitch x:Name="IsNoPicsMode" Header="无图模式" Toggled="ToggleSwitch_Toggled"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center">图片缓存大小：</TextBlock>
                    <TextBlock x:Name="CacheSizeTextBlock" VerticalAlignment="Center" Text="正在加载……"/>
                    <Button x:Name="CleanCacheButton" Tag="CleanCache" Click="Button_Click" Margin="16,0" IsEnabled="False">清除</Button>
                </StackPanel>
                <ToggleSwitch x:Name="CheckUpdateWhenLuanching" Header="启动时检查更新" Toggled="ToggleSwitch_Toggled"/>
                <Button x:Name="CleanDataButton" Visibility="Collapsed" Click="CleanDataButton_Click" Content="退出登录"/>
                <Button Tag="checkUpdate" Click="Button_Click">检查更新</Button>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock FontSize="20" VerticalAlignment="Center" Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}">版本：</TextBlock>
                    <TextBlock x:Name="VersionTextBlock" FontSize="20" VerticalAlignment="Center" Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
                </StackPanel>
                <!--<Button Tag="ShowExceptionList" Click="Button_Click">显示最近的错误记录</Button>-->
                <Button Tag="gotoTestPage" Click="Button_Click" Visibility="Collapsed" x:Name="gotoTestPage" Content="go to test page"/>
            </StackPanel>
        </ScrollViewer>
        <Border x:Name="title" cu:Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" fcu:Background="{ThemeResource SystemControlChromeHighAcrylicElementMediumBrush}" VerticalAlignment="Top">
            <TextBlock Margin="{x:Bind data:Settings.titleTextMargin}" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="{x:Bind data:Settings.titleContentVerticalAlignment}">设置</TextBlock>
        </Border>
    </Grid>
</Page>
