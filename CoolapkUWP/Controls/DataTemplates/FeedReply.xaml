<ResourceDictionary
    x:Class="CoolapkUWP.Controls.DataTemplates.FeedReply"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Windows10version1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    xmlns:control="using:CoolapkUWP.Controls"
    xmlns:local="using:CoolapkUWP.Controls.DataTemplates"
    xmlns:models="using:CoolapkUWP.Models">
    <DataTemplate x:Key="feed_reply" x:DataType="models:FeedReplyModel">
        <Grid
            Margin="8"
            Padding="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
            BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.RowSpan="4"
                Margin="4,12,8,0"
                Padding="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="Transparent"
                Style="{ThemeResource ButtonRevealStyle}"
                Tag="{x:Bind Uurl}"
                Tapped="OnTapped">
                <Ellipse Width="28" Height="28">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="{x:Bind UserSmallAvatar.Pic, Mode=OneWay}" />
                    </Ellipse.Fill>
                </Ellipse>
            </Button>
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Button
                        Margin="0,4"
                        Padding="0,4"
                        Background="Transparent"
                        Content="{x:Bind Username}"
                        Style="{ThemeResource ButtonRevealStyle}"
                        Tag="{x:Bind Uurl}"
                        Tapped="OnTapped" />
                    <Border
                        x:Name="isAu"
                        VerticalAlignment="Center"
                        x:Load="{x:Bind IsFeedAuthor}"
                        Background="{ThemeResource SystemControlHighlightListAccentHighBrush}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Margin" Value="5,1" />
                            </Style>
                        </Border.Style>
                        <TextBlock
                            Margin="1"
                            FontSize="12"
                            Text="楼主" />
                    </Border>
                </StackPanel>
                <StackPanel Padding="0,-10,0,0" Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="Gray"
                        Text="{x:Bind Dateline}" />
                    <TextBlock
                        x:Name="At"
                        VerticalAlignment="Center"
                        x:Load="{x:Bind ShowRuser}"
                        Foreground="Gray">
                        @
                    </TextBlock>
                    <Button
                        x:Name="Ruser"
                        Padding="4"
                        x:Load="{x:Bind ShowRuser}"
                        Background="Transparent"
                        Content="{x:Bind Rusername}"
                        Style="{StaticResource ButtonStyle1}"
                        Tag="{x:Bind Rurl}"
                        Tapped="OnTapped" />
                </StackPanel>
            </StackPanel>
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,4,8,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <control:TextBlockEx MessageText="{x:Bind Message}" />
                <Grid
                    x:Name="pic"
                    Grid.Row="1"
                    Margin="0,4"
                    HorizontalAlignment="Left"
                    x:Load="{x:Bind ShowPic}"
                    BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Image
                        MinWidth="100"
                        MinHeight="100"
                        MaxWidth="100"
                        MaxHeight="100"
                        Source="{x:Bind Pic.Pic, Mode=OneWay}"
                        Stretch="UniformToFill"
                        Tag="{x:Bind Pic.Uri}"
                        Tapped="Image_Tapped" />
                    <StackPanel
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Orientation="Horizontal">
                        <Border
                            x:Name="longPic"
                            x:Load="{x:Bind Pic.IsLongPic, Mode=OneWay}"
                            Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                            <TextBlock>长图</TextBlock>
                        </Border>
                        <Border
                            x:Name="gif"
                            x:Load="{x:Bind Pic.IsGif}"
                            Background="{ThemeResource SystemControlBackgroundAccentBrush}">
                            <TextBlock>GIF</TextBlock>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,0,0,4"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Button
                    x:Name="likeButton"
                    Padding="2"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    Click="FeedButton_Click"
                    Style="{ThemeResource ButtonRevealStyle}"
                    Tag="{x:Bind}">
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon
                            x:Name="like2"
                            x:Load="{x:Bind Liked2}"
                            Symbol="Like" />
                        <SymbolIcon
                            x:Name="like1"
                            x:Load="{x:Bind Liked}"
                            Foreground="{ThemeResource SystemControlBackgroundAccentBrush}"
                            Symbol="Like" />
                        <TextBlock Margin="3,0,0,0" Text="{x:Bind Likenum, Mode=OneWay}" />
                    </StackPanel>
                </Button>
                <StackPanel
                    Padding="2"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <SymbolIcon Symbol="Comment" />
                    <TextBlock
                        Margin="3,0"
                        VerticalAlignment="Center"
                        Text="{x:Bind Replynum}" />
                </StackPanel>
                <Button
                    Padding="2"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    Content="查看会话"
                    Foreground="Gray"
                    Style="{ThemeResource ButtonRevealStyle}"
                    Tag="{x:Bind}"
                    Tapped="ReplyRowsItem_Tapped" />
            </StackPanel>
            <ListView
                x:Name="replyRows"
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,0,8,8"
                Windows10version1809:CornerRadius="8"
                x:Load="{x:Bind ShowreplyRows}"
                Background="{ThemeResource SystemControlBackgroundListLowBrush}"
                ItemsSource="{x:Bind ReplyRows}"
                ScrollViewer.VerticalScrollMode="Disabled"
                Style="{StaticResource VerticalListViewStyle}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Template" Value="{StaticResource AppListViewItemTemplate}" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="0" />
                        <Setter Property="Padding" Value="0" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.Footer>
                    <ListViewItem
                        x:Name="replyRowsMore"
                        x:Load="{x:Bind ShowreplyRowsMore}"
                        Tag="{x:Bind}"
                        Tapped="ReplyRowsItem_Tapped"
                        Template="{StaticResource AppListViewItemTemplate}">
                        <StackPanel
                            Margin="4,0"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock Foreground="Gray">查看全部回复(</TextBlock>
                            <TextBlock Foreground="Gray" Text="{x:Bind Replynum}" />
                            <TextBlock Foreground="Gray">)</TextBlock>
                        </StackPanel>
                    </ListViewItem>
                </ListView.Footer>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:SimpleFeedReplyModel">
                        <Border BorderBrush="{ThemeResource SystemControlBackgroundListLowRevealBorderBrush}" BorderThickness="1">
                            <control:TextBlockEx
                                Margin="4"
                                VerticalAlignment="Center"
                                MessageText="{x:Bind Message}" />
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </DataTemplate>
</ResourceDictionary>
